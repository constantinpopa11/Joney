<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:drawableLeft="@drawable/ic_place"
        android:text="Distance"
        android:textAlignment="textStart"
        android:textSize="18dp"
        android:textColor="@color/darkGreyText" />

    <SeekBar
        android:id="@+id/sb_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="30"
        android:progress="0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="Min: 0"
        android:layout_weight="1"
        android:gravity="left"
        android:textSize="12dp"
        android:textColor="@color/lightGreyText" />

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12dp"
            android:textColor="@color/darkGreyText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="Max: 30"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="12dp"
            android:textColor="@color/lightGreyText" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="32dp"
        android:drawableLeft="@drawable/ic_business"
        android:text="Category"
        android:textAlignment="textStart"
        android:textSize="18dp"
        android:textColor="@color/darkGreyText" />

    <Spinner
        android:id="@+id/spn_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min"
                android:textSize="16dp"
                android:textColor="@color/darkGreyText" />

            <EditText
                android:id="@+id/et_min_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/ic_euro"
                android:drawablePadding="10dp"
                android:hint="0.00"
                android:maxLength="3"
                android:inputType="numberDecimal"
                android:textAlignment="textEnd"
                android:textColor="@color/darkGreyText"
                android:textColorHighlight="@color/white"
                android:textColorHint="@color/lightGreyText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max"
                android:textSize="16dp"
                android:textColor="@color/darkGreyText" />

            <EditText
                android:id="@+id/et_max_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/ic_euro"
                android:drawablePadding="10dp"
                android:hint="100.00"
                android:maxLength="3"
                android:inputType="numberDecimal"
                android:textAlignment="textEnd"
                android:textColor="@color/darkGreyText"
                android:textColorHighlight="@color/white"
                android:textColorHint="@color/lightGreyText" />
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/btn_find_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_red_selector"
        android:drawableLeft="@drawable/ic_search_white"
        android:padding="15dp"
        android:shadowColor="@android:color/transparent"
        android:textColor="@color/white"
        android:text="Find jobs" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="8dp"
    android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft">

    <ImageView
        android:id="@+id/iv_job_picture"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/logo_joney_grey"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_job_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkGrey"
                android:layout_weight="1"
                android:layout_marginRight="12dp"
                android:text="Really long job title goes here even on multiple lines"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textColor="@color/colorSecondary"
                android:textStyle="bold"
                android:text="View" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_job_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job category placeholder"
            android:textColor="@color/darkGrey"
            android:textSize="14dp" />

        <LinearLayout
            android:id="@+id/ll_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <ImageView
                android:id="@+id/iv_status"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginRight="4dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_times" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Completed"
                android:textColor="@color/lightGrey"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_new_candidates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <ImageView
                android:id="@+id/iv_new_candidates"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="4dp"
                android:background="@drawable/ic_notification"/>

            <TextView
                android:id="@+id/tv_new_candidates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:text="4 new candidates"
                android:textColor="@color/lightGrey"
                android:gravity="center_vertical"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="by "
                android:textColor="@color/lightGrey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mario Rossi"
                android:textColor="@color/lightGrey"
                android:textStyle="bold"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_created_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="dd/mm/aaaa"
                android:textColor="@color/lightGrey"
                android:textStyle="italic"
                android:textAlignment="textEnd"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSecondary"/>

</LinearLayout>